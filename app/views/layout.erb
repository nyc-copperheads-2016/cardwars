<body>
 <div id="content">
   <div class="container-fluid">
  <% if logged_in? %>
  <span class= "greeting"> Greetings, <%= current_user.username %></span>
    <br> 
      <br>
  <form method='post' action='/sessions'>
    <input type='hidden' name='_method' value='DELETE' />
      <input id='logout' type='submit' value='Logout' />
   </form>
  
   <% else %>
    <p><a href="/sessions/new">Login</a>|<a href="/users">Sign Up</a>|<a href="/index">Home</a></a>

   <% end %>
     
  <%= yield %>
      </div>
    </div>
  </body>
</html>
